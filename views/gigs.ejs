<%- include("partials/header", { title: "inner" }) -%>

<section id="gigs" class="container">
    <h1>
        <% if (result  && result > 0) { %>
            <span class="text-primary"><%- result %></span> gigs found for <span class="text-primary">"<%- term %>"</span>
        <% } else { %>
            All gigs
        <% } %>
    </h1>

    <% if (gigs.length > 0) { %> 
    <% gigs.forEach(gig => { %>
        <div class="gig">
            <div class="row">
                <div class="col-sm-9">
                    <h3><%- gig.title %></h3>
                    <p>
                        <%- gig.description %>
                    </p>
                    <ul>
                        <li>
                            <h3>
                                <span class="badge bg-light text-dark">
                                    Budget: <%- gig.budget.toLocaleString() %>
                                </span>
                            </h3>
                        </li>
                        <li><a href="mailto:<%- gig.contact_email %>" class="btn btn-reverse">Apply Now</a></li>
                    </ul>
                    <div class="tech">
                        <small>Technologies Needed: <span><%- gig.technologies %></span></small>
                    </div>
                </div>
                <div class="col-sm-3">
                    <p>
                        <small>Posted by Mike</small>
                    </p>
                    <p>
                        <small>Posted <%- moment(gig.createdAt).fromNow() %></small>
                    </p>
                </div>
            </div>
        </div>
    <% }) %>
    <% } else { %>
        <div class="gig">
            <div class="row">
                <div class="col-sm-9">
                    <h3>
                        No gigs found for 
                        <span class="text-warning">
                            <%- term %>!
                        </span>
                        Try searching again.
                    </h3>
                </div>
            </div>
        </div>
    <% } %>

    <div class="row mt-5 text-center">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <!-- pagination for the  -->
            <% if (pages && pages > 0) { %>
                <ul class="pagination pagination-circle text-center">
                    <% if (current == 1) { %>
                        <li class="page-item disabled"><a class="page-link">First</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/all-gigs/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link"><%- i %></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/all-gigs/<%- i %>"><%- i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/all-gigs/<%- pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>                        
        </div>
    </div>
  </section>

<%- include("partials/footer") -%>