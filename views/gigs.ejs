<%- include("partials/header", { title: "inner" }) -%>

<section id="gigs" class="container">
    <h1>All Gigs</h1>
    <% if (gigs) { %> 
    <% gigs.forEach(gig => { %>
        <div class="gig">
            <div class="row">
                <div class="col-sm-9">
                    <h3><%- gig.title %></h3>
                    <p>
                        <%- gig.description %>
                    </p>
                    <ul>
                        <li>Budget: <%- gig.budget %> </li>
                        <li><a href="mailto:<%- gig.contact_email %>" class="btn btn-reverse">Apply Now</a></li>
                    </ul>
                    <div class="tech">
                        <small>Technologies Needed: <span><%- gig.technologies %></span></small>
                    </div>
                </div>
                <div class="col-sm-3">
                    <p>
                        <small>Posted by Mike</small>
                    </p>
                    <p>
                        <small>Posted on <%- gig.createdAt %></small>
                    </p>
                </div>
            </div>
        </div>
    <% }) %>
    <% } else { %>
        <p>No gigs found</p>
    <% } %>
  </section>

<%- include("partials/footer") -%>